{
  "name": "talpa-solutions-backend",
  "version": "1.0.0",
  "description": "A simple node, graphql and typescript application",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "prebuild": "npm run clean",
    "start-production": "node build/server.js",
    "start": "node src/server.ts",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "format": "prettier --write \"{src,tests,examples}/**/*.{ts,js}\" \"docs/**/*.md\"",
    "check:type": "tsc --noEmit && tsc --noEmit -p ./examples/tsconfig.json",
    "check": "npm run check:format && npm run check:type",
    "check:format": "prettier --check \"{src,tests,examples}/**/*.{ts,js}\" \"docs/**/*.md\"",
    "lint": "tslint --project tsconfig.json",
    "verify": "npm run check && npm run lint",
    "build:dev": "nodemon src/server.ts --exec ts-node src/server.ts -e ts,graphql"
  },
  "keywords": [
    "node.js",
    "express.js",
    "graphql",
    "typescript"
  ],
  "author": "Md Sazzadul Islam",
  "license": "ISC",
  "dependencies": {
    "@graphql-tools/utils": "^8.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-winston": "^4.2.0",
    "graphql": "^15.6.1",
    "graphql-tools": "^8.2.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/node": "^16.11.1",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.3.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.4.4"
  }
}
